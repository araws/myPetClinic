<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <packaging>pom</packaging>

    <modules>
        <module>petClinicData</module>
        <module>petClinicWeb</module>
    </modules>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.2.RELEASE</version>
        <relativePath /> <!-- lookup parent from repository -->
    </parent>
    <groupId>pl.antygravity</groupId>
    <artifactId>mypetclinic</artifactId>
    <version>0.0.2</version>
    <name>mypetclinic</name>
    <description>My version of Spring Pet Clinic</description>

    <properties>
        <java.version>13</java.version>
        <start-class>pl.antygravity.mypetclinic.MyPetClinicApplication</start-class>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <goals>install</goals>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>

            </plugin>
        </plugins>
    </build>

    <scm>
        <developerConnection>scm:git:git@github.com:araws/myPetClinic.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

</project>